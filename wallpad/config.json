{
	"name": "Navien Wallpad Controller with RS485",
	"version": "0.0.1",
	"slug": "wallpad",
	"description": "주안역센트레빌 경동나비엔 월패드용 애드온 (Node.js)",
	"arch": [
		"armhf",
		"armv7",
		"aarch64",
		"amd64",
		"i386"
	],
	"map": [
		"share:rw"
	],
	"url": "https://github.com/goldfinger8157/navien-wallpad",
	"startup": "application",
	"boot": "auto",
	"uart": true,
	"options": {
		"mqtt": {
			"server": "192.168.1.200",
			"username": "-user-name-",
			"password": "-pass-word-",
			"receiveDelay": 3000
		},
		"socket" : {
			"deviceIP": "192.168.1.201",
			"port": 9999
		}
	},
	"schema": {
		"mqtt": {
			"server": "str",
			"username": "str",
			"password": "str",
			"receiveDelay": "int"
		},
		"socket" : {
                        "deviceIP": "str?",
                        "port": "int?"
                }
	}
}
